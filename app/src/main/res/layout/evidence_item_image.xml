<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.achievers.util.DateUtils" />

        <variable
            name="evidence"
            type="com.achievers.models.Evidence" />

        <variable
            name="resources"
            type="android.content.res.Resources" />

        <variable
            name="actionHandler"
            type="com.achievers.ui.evidence.EvidenceItemActionHandler" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ccc"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:onClick="@{ () -> actionHandler.evidenceClicked(evidence) }">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{ evidence.comment }" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                app:url="@{ evidence.url }"
                app:resources="@{ resources }" />
        </LinearLayout>
    </LinearLayout>
</layout>
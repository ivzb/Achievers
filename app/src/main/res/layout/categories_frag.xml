<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:adapter="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />

        <variable
            name="categories"
            type="com.achievers.Categories.CategoriesViewModel" />

        <variable
            name="achievements"
            type="com.achievers.Achievements.AchievementsViewModel" />

        <variable
            name="actionHandler"
            type="com.achievers.Categories.CategoriesContract.Presenter" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.achievers.util.ScrollChildSwipeRefreshLayout
            android:id="@+id/refresh_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            adapter:onRefresh="@{ actionHandler }"
            adapter:category="@{ categories.parent }">

            <RelativeLayout
                android:id="@+id/categoriesContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/llCategories"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="@{categories.notEmpty ? View.VISIBLE : View.GONE}">

                    <TextView
                        android:id="@+id/filteringLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="@dimen/list_item_padding"
                        android:layout_marginRight="@dimen/list_item_padding"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:layout_marginBottom="@dimen/activity_vertical_margin"
                        android:text="@{categories.currentFilteringLabel}" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rvCategories"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:rvCategoriesAdapter="@{categories.adapter}" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/noCategories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical"
                    android:visibility="@{categories.notEmpty ? View.GONE : View.VISIBLE}">

                    <ImageView
                        android:id="@+id/noCategoriesIcon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:src="@{categories.noCategoriesIconRes}" />

                    <TextView
                        android:id="@+id/noCategoriesMain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@{categories.noCategoriesLabel}"
                        android:layout_marginBottom="@dimen/list_item_padding"/>

                </LinearLayout>
            </RelativeLayout>
        </com.achievers.util.ScrollChildSwipeRefreshLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="@{ categories.parent == null ? View.GONE : View.VISIBLE}">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{ categories.parent.description }"
                    android:textSize="30sp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvAchievements"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:rvAchievementsAdapter="@{ achievements.adapter }"
                    app:onLoadMore="@{ actionHandler }" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="@{ categories.parent != null ? View.GONE : View.VISIBLE}">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Please select category"
                    android:textSize="30sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>
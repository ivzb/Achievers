<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />

        <variable
            name="previewUrl"
            type="String" />

        <variable
            name="actionHandler"
            type="com.achievers.ui._base.contracts.action_handlers.BaseActionHandler" />

        <variable
            name="showControls"
            type="Boolean" />

        <variable
            name="playResource"
            type="Integer" />

        <variable
            name="pauseResource"
            type="Integer" />

        <variable
            name="isPlaying"
            type="Boolean" />

        <variable
            name="resources"
            type="android.content.res.Resources" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdvPreview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:visibility="@{ isPlaying ? View.INVISIBLE : View.VISIBLE }"
            app:url="@{ previewUrl }"
            app:resources="@{ resources }"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.exoplayer2.ui.SimpleExoPlayerView
        android:id="@+id/playerView"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:visibility="@{ isPlaying ? View.VISIBLE : View.GONE }"
        app:layout_constraintTop_toTopOf="@+id/sdvPreview"
        app:layout_constraintStart_toStartOf="@+id/sdvPreview"
        app:layout_constraintEnd_toEndOf="@+id/sdvPreview"
        app:layout_constraintBottom_toBottomOf="@+id/sdvPreview" />

        <!--android:visibility="@{ viewModel.playingVideo ? View.VISIBLE : View.GONE }"-->
        <!--app:exoPlayer="@{ viewModel.exoPlayer }"-->
        <!--app:play="@{ viewModel.playingVideo }"-->
        <!--app:context="@{ viewModel.context }"-->
        <!--app:url="@{ viewModel.evidence.url }"-->

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:innerRadius="0dp"
            android:shape="ring"
            android:foreground="?selectableItemBackground"
            app:cardCornerRadius="75dp"
            app:layout_constraintTop_toTopOf="@+id/sdvPreview"
            app:layout_constraintLeft_toLeftOf="@+id/sdvPreview"
            app:layout_constraintRight_toRightOf="@+id/sdvPreview"
            app:layout_constraintBottom_toBottomOf="@+id/sdvPreview"
            android:onClick="@{ () -> actionHandler.onClick() }"
            android:visibility="@{ showControls ? View.VISIBLE : View.GONE }">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@{ playResource }"
                android:visibility="@{ isPlaying ? View.GONE : View.VISIBLE }" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@{ pauseResource }"
                android:visibility="@{ isPlaying ? View.VISIBLE : View.GONE }" />
        </android.support.v7.widget.CardView>
    </android.support.constraint.ConstraintLayout>
</layout>